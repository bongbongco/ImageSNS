<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ikota.imagesns" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyTheme" >
        <activity
            android:name="com.ikota.imagesns.ui.ImageListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ikota.imagesns.ui.LoginActivity"/>
        <activity android:name="com.ikota.imagesns.ui.ImageDetailActivity"/>
        <activity android:name="com.ikota.imagesns.ui.ProfileActivity"/>
        <activity android:name="com.ikota.imagesns.ui.UploadActivity"/>
        <activity android:name="com.ikota.imagesns.ui.SettingsActivity"
            android:theme="@style/Theme.SettingsTheme"/>
    </application>

</manifest>
